{
  "name": "todo-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "NODE_ENV=development nodemon --watch src --exec 'ts-node' src/index.ts",
    "prod": "yarn run ts-node dist/index.js",
    "start": "node dist/index.js",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "prettier:check": "prettier --check 'src/**/*.ts'",
    "prettier": "prettier --write 'src/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "typeorm": "typeorm-ts-node-commonjs -d src/database/data-source.ts",
    "dev:migration:run": "NODE_ENV=development yarn typeorm migration:run",
    "prod:migration:run": "yarn run typeorm-ts-node-commonjs -d dist/database/data-source.js migration:run",
    "migration:create": "node scripts/migration-create.js",
    "migration:show": "NODE_ENV=development yarn typeorm migration:show",
    "migration:revert": "yarn typeorm migration:revert",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "express-async-errors": "^3.1.1",
    "jest": "^29.7.0",
    "mysql2": "^3.12.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "response-time": "^2.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/response-time": "^2.3.8",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0"
  }
}
